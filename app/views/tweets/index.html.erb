<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1>Feed</h1>

      <% @tweets.each do |tweet| %>
        <div class="card">
          <div class="card-body">
            <p class="card-text">
              <%= tweet.shortened %>
            </p>
            <small><%= tweet.created_at.strftime("%d/%m/%Y %H:%M") %></small>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
